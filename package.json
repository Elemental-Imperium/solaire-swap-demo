{
  "name": "solaireswap",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "frontend:dev": "yarn workspace frontend dev",
    "frontend:build": "yarn workspace frontend build",
    "frontend:preview": "yarn workspace frontend preview",
    "backend:compile": "yarn workspace backend hardhat compile",
    "backend:test": "yarn workspace backend hardhat test",
    "backend:deploy": "yarn workspace backend hardhat deploy",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,sol}\"",
    "lint": "eslint \"**/*.{js,jsx,ts,tsx}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-react": "^7.32.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "prettier-plugin-solidity": "^1.1.3",
    "typescript": "^5.0.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.sol": "prettier --write"
  }
} 